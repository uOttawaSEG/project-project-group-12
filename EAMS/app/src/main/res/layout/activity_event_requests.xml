<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventRequestPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Back" />

        <!-- Centered Events Request Page Title -->
        <TextView
            android:id="@+id/eventsRequestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events Request Page"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingTop="8dp"/>

        <!-- Centered Description and Date TextViews -->
        <TextView
            android:id="@+id/eventsRequestDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:gravity="center_horizontal"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/eventsRequestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:gravity="center_horizontal"
            android:paddingTop="8dp" />

        <!-- Accepted Attendees List -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of Accepted Attendees"
            android:paddingTop="16dp" />

        <ListView
            android:id="@+id/acceptedAttendeesListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

        <!-- Pending Attendees List -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Attendees"
            android:paddingTop="16dp" />

        <ListView
            android:id="@+id/pendingAttendeesListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
